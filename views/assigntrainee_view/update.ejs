<div  class="card-body">
    <h4 class="card-title">Default form</h4>
    <form class="forms-sample" action="/staff/edittraineecourse?selectedtraineeid=<%= selectedtrainee.id %>&selectedcourseid=<%= selectedcourse.id %>" method="post">
      <div class="form-group">
        <label for="exampleFormControlSelect1">Trainees</label>
        <select name = "traineeid" style="color: #f7f5f5" class="form-control" id="exampleFormControlSelect1">
            <option  value="<%= selectedtrainee.id%>"><%= selectedtrainee.name%></option>
          <% unassigntrainees.forEach(a=> { %>
            <option  value="<%= a.id%>"><%= a.name%></option>
            <% }) %>
        
        </select>
      </div>
      
      <div class="form-group">
        <label for="exampleFormControlSelect1">Courses</label>
        <select name = "courseid" style="color: #f7f5f5" class="form-control" id="exampleFormControlSelect1">
            <option  value="<%= selectedcourse.id%>"><%= selectedcourse.name%></option>
          <% unassgincourses.forEach(a=> { %>
            <option  value="<%= a.id%>"><%= a.name%></option>
            <% }) %>
        
        </select>
      </div>
      <button type="submit" class="btn btn-primary mr-2">Submit</button>
    </form>
  </div>
 



    