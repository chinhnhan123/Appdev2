<div  class="card-body">
    <h4 class="card-title">Default form</h4>
    <form class="forms-sample" action="/staff/addtrainercourse" method="post">
      <div class="form-group">
        <label for="exampleFormControlSelect1">Trainers</label>
        <select name = "trainerid" style="color: #f7f5f5" class="form-control" id="exampleFormControlSelect1">
          
          <% trainers.forEach(a=> { %>
            <option  value="<%= a.id%>"><%= a.fullname%></option>
            <% }) %>
        
        </select>
      </div>
      
      <div class="form-group">
        <label for="exampleFormControlSelect1">Courses</label>
        <select name = "courseid" style="color: #f7f5f5" class="form-control" id="exampleFormControlSelect1">
          
          <% courses.forEach(a=> { %>
            <option  value="<%= a.id%>"><%= a.name%></option>
            <% }) %>
        
        </select>
      </div>
      <button type="submit" class="btn btn-primary mr-2">Submit</button>
    </form>
  </div>
 



    